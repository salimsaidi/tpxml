<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
targetNamespace="http://univ.fr/stb" xmlns="http://univ.fr/stb">

<xs:element name="titre" type="xs:string"/>
<xs:element name="version" type="xs:string" default="0.1"/>
<xs:element name="date" type="xs:date"/>
<xs:element name="description" type="xs:string"/>
<xs:element name="priorite">
<xs:simpleType>
      <xs:restriction base="xs:integer">
         <xs:minInclusive value="1"/>
         <xs:maxInclusive value="10"/>
      </xs:restriction>
   </xs:simpleType>
 </xs:element>

<xs:complexType name="adrType">
<xs:sequence>
	<xs:element name="adresse" type="xs:string"></xs:element>
	<xs:element name="ville" type="xs:string"></xs:element>
	<xs:element name="codePostal" type="xs:int"></xs:element>
	<xs:element name="Pays" type="xs:string"></xs:element>
</xs:sequence>
</xs:complexType>

